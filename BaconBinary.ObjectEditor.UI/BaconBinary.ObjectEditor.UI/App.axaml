<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:BaconBinary.ObjectEditor.UI"
             x:Class="BaconBinary.ObjectEditor.UI.App"
             RequestedThemeVariant="Dark">

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <!-- Cyberpunk / Neon Palette -->
        <SolidColorBrush x:Key="AppBackgroundBrush">#0D1117</SolidColorBrush>
        <SolidColorBrush x:Key="PanelBackgroundBrush">#161B22</SolidColorBrush>
        <SolidColorBrush x:Key="BorderBrush">#30363D</SolidColorBrush>
        <SolidColorBrush x:Key="HeaderBackgroundBrush">#21262D</SolidColorBrush>
        <SolidColorBrush x:Key="AccentBrush">#58A6FF</SolidColorBrush>
        <SolidColorBrush x:Key="AccentHoverBrush">#79C0FF</SolidColorBrush>
        <SolidColorBrush x:Key="TextPrimaryBrush">#C9D1D9</SolidColorBrush>
        <SolidColorBrush x:Key="TextSecondaryBrush">#8B949E</SolidColorBrush>
        <SolidColorBrush x:Key="ListItemSelectedBackgroundBrush">#1F6FEB</SolidColorBrush>
        
        <!-- Menu Specific Brushes -->
        <SolidColorBrush x:Key="MenuHoverBrush">#30363D</SolidColorBrush>
        <SolidColorBrush x:Key="MenuSelectedBrush">#1F6FEB</SolidColorBrush>
        
        <!-- Bacon Glitch Icon Resource -->
        <DrawingImage x:Key="BaconIcon">
            <DrawingImage.Drawing>
                <DrawingGroup>
                    <!-- Cyan Layer (Shifted Left) -->
                    <GeometryDrawing Brush="#00FFFF" Geometry="M 7,8 Q 11,4 15,8 T 23,8 M 7,16 Q 11,12 15,16 T 23,16 M 7,24 Q 11,20 15,24 T 23,24">
                        <GeometryDrawing.Pen>
                            <Pen Brush="#00FFFF" Thickness="3" LineCap="Round"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                    
                    <!-- Magenta Layer (Shifted Right) -->
                    <GeometryDrawing Brush="#FF00FF" Geometry="M 9,8 Q 13,4 17,8 T 25,8 M 9,16 Q 13,12 17,16 T 25,16 M 9,24 Q 13,20 17,24 T 25,24">
                        <GeometryDrawing.Pen>
                            <Pen Brush="#FF00FF" Thickness="3" LineCap="Round"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                    
                    <!-- White Layer (Center) -->
                    <GeometryDrawing Brush="#FFFFFF" Geometry="M 8,8 Q 12,4 16,8 T 24,8 M 8,16 Q 12,12 16,16 T 24,16 M 8,24 Q 12,20 16,24 T 24,24">
                        <GeometryDrawing.Pen>
                            <Pen Brush="#FFFFFF" Thickness="3" LineCap="Round"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingImage.Drawing>
        </DrawingImage>

        <VisualBrush x:Key="CheckerboardBrush" TileMode="Tile" SourceRect="0,0,16,16" DestinationRect="0,0,16,16">
            <VisualBrush.Visual>
                <Grid Width="16" Height="16" Background="#161B22">
                    <Path Data="M0,0 L8,0 L8,8 L0,8 Z M8,8 L16,8 L16,16 L8,16 Z" Fill="#21262D" />
                </Grid>
            </VisualBrush.Visual>
        </VisualBrush>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <Style Selector="Border.Panel">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource ListItemSelectedBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        
        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- Menu Styles -->
        <Style Selector="Menu">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- Hover State -->
        <Style Selector="MenuItem:pointerover /template/ ContentPresenter#PART_HeaderPresenter">
            <Setter Property="Background" Value="{DynamicResource MenuHoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Selected/Open State -->
        <Style Selector="MenuItem:selected /template/ ContentPresenter#PART_HeaderPresenter">
            <Setter Property="Background" Value="{DynamicResource MenuSelectedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <!-- Pressed State (to avoid default blue) -->
        <Style Selector="MenuItem:pressed /template/ ContentPresenter#PART_HeaderPresenter">
            <Setter Property="Background" Value="{DynamicResource MenuSelectedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Submenu Item Hover (Specific fix for items inside the dropdown) -->
        <Style Selector="MenuItem > MenuItem:pointerover /template/ ContentPresenter#PART_HeaderPresenter">
             <Setter Property="Background" Value="{DynamicResource MenuHoverBrush}"/>
             <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Menu > MenuItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
        </Style>
        
        <Style Selector="ContextMenu">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="4"/>
        </Style>
        
        <!-- ComboBox Styles -->
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
        <Style Selector="ComboBoxItem">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>
        <Style Selector="ComboBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource MenuHoverBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="ComboBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="{DynamicResource MenuSelectedBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Separator">
            <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Height" Value="1"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

    </Application.Styles>
</Application>
