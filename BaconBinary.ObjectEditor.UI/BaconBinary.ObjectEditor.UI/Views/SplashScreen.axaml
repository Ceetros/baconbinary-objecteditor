<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:BaconBinary.ObjectEditor.UI.Views"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        x:Class="BaconBinary.ObjectEditor.UI.Views.SplashScreen"
        x:DataType="views:SplashScreen"
        Icon="/Assets/icon.ico"
        Title="Object Editor"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        SystemDecorations="None"
        Width="400" Height="300"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}">
    
    <Grid RowDefinitions="*, Auto">
        <StackPanel Grid.Row="0" Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="{DynamicResource BaconIcon}" Width="96" Height="96" Margin="0,0,0,10"/>
            <ProgressBar IsIndeterminate="True" Width="150" HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}"/>
        </StackPanel>
        
        <TextBlock Grid.Row="1" Text="{Binding AppVersion, StringFormat='Version {0}'}" 
                   FontSize="11" 
                   Foreground="{DynamicResource TextSecondaryBrush}" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Bottom" 
                   Margin="12"/>
    </Grid>
    
</Window>
