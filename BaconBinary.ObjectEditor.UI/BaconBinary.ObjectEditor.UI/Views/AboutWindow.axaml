<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="using:BaconBinary.ObjectEditor.UI.Views"
        x:Class="BaconBinary.ObjectEditor.UI.Views.AboutWindow"
        x:DataType="views:AboutWindow"
        Title="About Object Editor"
        Icon="/Assets/icon.ico"
        Width="450" Height="400"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        Background="{DynamicResource AppBackgroundBrush}"
        Foreground="{DynamicResource TextPrimaryBrush}">

    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8">
        <Grid RowDefinitions="Auto, *, Auto, Auto">
            
            <!-- Header with Logo -->
            <StackPanel Grid.Row="0" Spacing="10" Margin="0,20,0,0">
                <Image Source="{DynamicResource BaconIcon}" Width="64" Height="64"/>
                <TextBlock Text="Object Editor" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="A modern tool for Tibia asset editing." Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Supporters & Credits -->
            <ScrollViewer Grid.Row="1" Margin="20">
                <StackPanel Spacing="15">
                    <TextBlock Text="Supporters &amp; Inspiration" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                    
                    <StackPanel Margin="10,0,0,0" Spacing="8">
                        <TextBlock>
                            <Run FontWeight="Bold">PokeWorldOnline:</Run>
                            <Run>Contributed to the initial idea.</Run>
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold">Ninja Chronicles:</Run>
                            <Run>Active project supporting and using the tool.</Run>
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold">Object Builder:</Run>
                            <Run>Served as the main inspiration for the UI.</Run>
                        </TextBlock>
                        <TextBlock>
                            <Run FontWeight="Bold">Ceetros:</Run>
                            <Run>Creator and backend developer.</Run>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Version -->
            <TextBlock Grid.Row="2" Text="{Binding AppVersion, StringFormat='Version {0}'}" 
                       FontSize="10" 
                       Foreground="{DynamicResource TextSecondaryBrush}" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Bottom"
                       Margin="0,10"/>

            <!-- Close Button -->
            <Button Grid.Row="3" Content="Close" Classes="AccentButton" HorizontalAlignment="Center" Margin="0,0,0,20"
                    Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>
