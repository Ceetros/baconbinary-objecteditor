<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BaconBinary.ObjectEditor.UI.ViewModels"
        x:Class="BaconBinary.ObjectEditor.UI.Views.KeyPromptWindow"
        x:DataType="vm:KeyPromptViewModel"
        Title="Encryption Key"
        Width="350" Height="180"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <StackPanel Spacing="10" Margin="15">
        <TextBlock Text="This project is encrypted. Please enter the key:"/>
        <TextBox Text="{Binding Key}" PasswordChar="*"/>
        <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,0">
            <Button Grid.Column="1" Content="OK" Command="{Binding OkCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" IsDefault="True"/>
            <Button Grid.Column="2" Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}" Margin="10,0,0,0" IsCancel="True"/>
        </Grid>
    </StackPanel>
</Window>
